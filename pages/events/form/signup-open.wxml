<formInput title="Signup Open" info="{{signupInfo}}">
  <view class="px20">
    <view class="row-between">
      <view class="row-start" bindtap="selectSignupOpen" data-select="{{true}}">
        <view style="height: 40rpx; width: 40rpx; border-radius: 50%;" 
          class="mr20 duration3 {{event.signup_opens?'bg-sec':'opacity-3 bg-grey-light'}}">
        </view>
        <view class="duration3 {{event.signup_opens?'sec':'grey-light'}}">
          Open
        </view>
      </view>

      <view class="row-start" bindtap="selectSignupOpen" data-select="{{false}}">
        <view style="height: 40rpx; width: 40rpx; border-radius: 50%;" 
          class="mr20 duration3 {{!event.signup_opens?'bg-sec':'opacity-3 bg-grey-light'}}">
        </view>
        <view class="duration3 {{!event.signup_opens?'sec':'grey-light'}}">
          Closed
        </view>
      </view>
    </view>
  </view>
</formInput>