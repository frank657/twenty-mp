/* pages/events/share-canvas/share-canvas.wxss */
.canvas-bg {
  position: absolute;
  top: -50rpx;
  bottom: -50rpx;
  left: -50rpx;
  right: -50rpx;
  filter: blur(50rpx);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.canvas-bg-image {
  transform: scale(1.3);
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  filter: blur(50rpx);
}

.canvas-footer {
  /* position: fixed; */
  box-sizing: border-box;
  background-color: white;
  border-radius: 40rpx 40rpx 0 0;
  /* bottom: 0; */
  width: 100%;
  padding: 50rpx 0 30rpx 0;
}