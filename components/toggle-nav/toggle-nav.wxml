<view class="relative row-between mb20 box-b {{left?'row-reverse':''}}" style="height: 50rpx;">
  <view class="f36 bold w-100 text-left ter" style="align-self: flex-start;">{{title}}</view>

  <view class="row-start py mt text-center relative box-b {{left?'ml20':'pr'}}" style="height: 36rpx;" bindtap="toggleNav">
    <view class="mr30 py duration3 bold {{showUpcoming?'grey':'grey-light'}} z1 column-center">
      <view class="{{showUpcoming?'scale':''}} transform-transition">upcoming</view>
      <view style="height: 14rpx; width: 30rpx;" class="radius50 bg-{{showUpcoming?'sec':'trans'}} duration3 mt"></view>
    </view>
    <view class="ml20 py duration3 bold {{showUpcoming?'grey-light':'grey'}} z1 column-center">
      <view class="{{!showUpcoming?'scale':''}} transform-transition">past</view>
      <view style="height: 14rpx; width: 30rpx;" class="radius50 bg-{{showUpcoming?'trans':'sec'}} duration3 mt"></view>
    </view>
  </view>
</view>
