<view class="fixed a0 z9999">
  <view class="absolute a0 transition-3" style="background: rgba(0, 0, 0, {{show?0.5:0}});" bindtap="closeFooterWindow"></view>
  
  <view class="footer-window {{show?'':'hide'}}">
    <view class="w100 row-between mb20">
      <view class="ter bold f36">{{title}}</view>
      <image src="/images/icons/cross.svg" class="icon-sm" style="position: relative; right: -30rpx;" 
        mode="aspectFit" bindtap="closeFooterWindow"></image>
    </view>

    <slot />
    
    <view class="bottom-safe"></view>
  </view>
</view>
