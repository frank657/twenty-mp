@import "/app";

.footer-window {
  background: white;
  position: absolute;
  width: 100%;
  bottom: 0;
  box-sizing: border-box;
  box-shadow: 0px 2px 20px rgba(0, 0, 0, 0.08);
  border-radius: 50rpx 50rpx 0 0;
  padding: 50rpx 80rpx;
  transition: 0.3s;
}

.hide {
  transform: translateY(100%);
}