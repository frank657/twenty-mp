/* components/tabbar/tabbar.wxss */
@import "/app.wxss";

/* TABBAR */
.cu-bar {
	display: flex;
	position: relative;
	align-items: center;
	min-height: 80rpx;
	justify-content: space-between;
}

.cu-bar.foot {
	position: fixed;
	width: 100%;
	bottom: 0;
	z-index: 1024;
	box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.cu-bar.tabbar {
	padding: 0;
  padding-top: 20rpx !important;
	/* height: calc(100rpx + env(safe-area-inset-bottom) / 2); */
	padding-bottom: calc(env(safe-area-inset-bottom) / 2 + 20rpx);
}

.cu-bar.tabbar.shadow {
	box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.cu-bar.tabbar .action {
	font-size: 22rpx;
	position: relative;
	flex: 1;
	text-align: center;
	padding: 0;
	display: block;
	height: auto;
	line-height: 1;
	margin: 0;
	overflow: initial;
}

.cu-bar.tabbar .action .cuIcon-cu-image image {
	width: 167rpx;
	height: 50rpx;
	display: inline-block;
}