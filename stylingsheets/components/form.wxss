.form-group {
  margin-bottom:20px;
  padding-left: 10px;
  padding-right: 10px;
}

.form-group-h {
  width: 100%;
  margin-bottom:20px;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 1px solid var(--blueCreamVDark);
}

.form-label {
  padding-bottom: 28rpx;
  box-sizing: border-box;
}

.form-value {
  text-align: left;
  padding-bottom: 28rpx;
  width: 70%;
}

.input-text-box {
  border: solid 1px rgba(0,0,0,0.1);
  /* box-shadow: 1px 1px 5px rgba(0,0,0,0.1); */
  border-radius: 3px;
  padding-left: 5px;
  padding-right: 5px;
  max-height: 60px;
}

